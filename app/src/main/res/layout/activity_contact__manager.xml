<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact__manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/antras"
    tools:context="com.example.viktorija.contactreader.Contact_Manager">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/host">
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tabCreator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewContact"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:src="@drawable/user"
                        app:srcCompat="@drawable/user" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextName"
                        android:hint="Person name"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="false"
                        android:cursorVisible="false" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:layout_marginTop="5dp"
                        android:id="@+id/editTextNumber"
                        android:hint="Phone Number"
                        android:layout_below="@+id/editTextName"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginTop="5dp"
                        android:id="@+id/editTextEmail"
                        android:hint="Email"
                        android:layout_below="@+id/editTextNumber"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentEnd="false"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:inputType="textWebEmailAddress" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:ems="10"
                        android:layout_below="@+id/editTextEmail"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:id="@+id/editTextAddress"
                        android:hint="Address"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentTop="false" />

                    <Button
                        android:text="Create"
                        android:layout_height="40dp"
                        android:id="@+id/Cbutton"
                        android:contentDescription="It will create a new Contact"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/editTextAddress"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"

                        android:background="@color/blue"/>
                    <Button
                        android:text="Clear"
                        android:layout_height="40dp"
                        android:id="@+id/ClearButton"
                        android:contentDescription="It will clear all Contacts"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/Cbutton"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"

                        android:background="@color/blue"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabContact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/listView" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>
